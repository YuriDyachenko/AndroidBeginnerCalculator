<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="button_digit_style" parent="button_style">
        <item name="android:backgroundTint">@color/purple_700</item>
    </style>

    <style name="button_other_style" parent="button_style">
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>

    <style name="linear_buttons">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_view_operand">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/button_digit_0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_error">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/error_margin_bottom</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>

</resources>
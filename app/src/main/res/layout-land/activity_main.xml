<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout style="@style/linear_buttons">

            <Button
                style="@style/button_other_style"
                android:text="@string/button_clear" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_clear_all" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_delete" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_plus" />
        </LinearLayout>

        <LinearLayout style="@style/linear_buttons">

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_1" />

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_2" />

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_3" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_minus" />
        </LinearLayout>

        <LinearLayout style="@style/linear_buttons">

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_4" />

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_5" />

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_6" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_multiply" />
        </LinearLayout>

        <LinearLayout style="@style/linear_buttons">

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_7" />

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_8" />

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_9" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_divide" />
        </LinearLayout>

        <LinearLayout style="@style/linear_buttons">

            <Button
                style="@style/button_digit_style"
                android:text="@string/button_digit_0" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_xor" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_rest" />

            <Button
                style="@style/button_other_style"
                android:text="@string/button_equal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/left_operand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="@string/button_digit_0"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/right_operand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="@string/button_digit_0"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>